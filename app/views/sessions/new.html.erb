<% provide(:title, "MercadApp Log In") %>

<div class="conteudo-global"> <!-- temporario -->

  <div class="login-usuario"> 
    <h1> Log In </h1>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
      <%= form_for(:session, url: login_path) do |f| %>
     
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Entrar", class:'btn brn-primary' %>

      <% end %>

      <p> Ainda não é cadastrado? <%= link_to "Cadastrar", signup_path %>

    </div>
  </div>

</div> <!-- fim div conteudo global -->
